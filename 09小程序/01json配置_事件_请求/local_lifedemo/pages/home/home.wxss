/* pages/home/home.wxss */

swiper{
  height: 350rpx;
}
swiper image{
  width:100%;
  height:100%;
}

.grid-list{
  display: flex;
  width:100%;
  flex-wrap:wrap;
}
.grid-item{
  width: 33.3%;
  height:200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.grid-item image{
  width:60rpx;
  height:60rpx
}
.grid-item text{
  font-size: 24rpx;
  margin-top: 10rpx;
}

.img-box{
  display: flex;
  padding: 20rpx 10rpx;
  justify-content: space-around;

}
.img-box image{
  width: 45%
}
